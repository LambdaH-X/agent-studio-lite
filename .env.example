HEALTH_CHECK_INTERVAL=30  # 健康检查间隔(秒)

# 备份配置
# ------------------------------------------
BACKUP_ENABLED=false  # 是否启用自动备份
BACKUP_INTERVAL=86400  # 备份间隔(秒)
BACKUP_RETENTION_DAYS=7  # 备份保留天数

# 安全配置
# ------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:80,http://localhost:3000  # 允许的跨域来源，多个用逗号分隔
CSRF_PROTECTION_ENABLED=true  # 是否启用CSRF保护
XSS_PROTECTION_ENABLED=true  # 是否启用XSS保护

# 部署信息
# ------------------------------------------
DEPLOY_ENV=development  # 部署环境标识
DEPLOY_DATE=  # 部署时自动填充
BUILD_VERSION=  # 构建版本号

