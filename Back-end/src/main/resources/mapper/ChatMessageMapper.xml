<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.agentworkflow.mapper.ChatMessageMapper">
    
    <resultMap id="ChatMessageResultMap" type="com.agentworkflow.entity.ChatMessage">
        <id column="id" property="id" />
        <result column="session_id" property="sessionId" />
        <result column="role" property="role" />
        <result column="content" property="content" />
        <result column="tokens" property="tokens" />
        <result column="model" property="model" />
        <result column="created_at" property="createdAt" />
    </resultMap>
    
    <!-- 根据会话ID按创建时间升序查找消息 -->
    <select id="findBySessionIdOrderByCreatedAtAsc" parameterType="long" resultMap="ChatMessageResultMap">
        SELECT
            id, session_id, role, content, tokens, model, created_at
        FROM chat_message
        WHERE session_id = #{sessionId}
        ORDER BY created_at ASC
    </select>
</mapper>