<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.agentworkflow.mapper.ChatSessionMapper">
    
    <resultMap id="ChatSessionResultMap" type="com.agentworkflow.entity.ChatSession">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="title" property="title" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="last_message_time" property="lastMessageTime" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>
    
    <!-- 根据用户ID查找所有会话 -->
    <select id="findByUserId" parameterType="long" resultMap="ChatSessionResultMap">
        SELECT
            id, user_id, title, type, status, last_message_time,
            created_at, updated_at, is_deleted
        FROM chat_session
        WHERE user_id = #{userId}
    </select>
    
    <!-- 根据用户ID查找未删除的会话 -->
    <select id="findByUserIdAndIsDeletedFalse" parameterType="long" resultMap="ChatSessionResultMap">
        SELECT
            id, user_id, title, type, status, last_message_time,
            created_at, updated_at, is_deleted
        FROM chat_session
        WHERE user_id = #{userId}
          AND is_deleted = 0
        ORDER BY last_message_time DESC, created_at DESC
    </select>
</mapper>